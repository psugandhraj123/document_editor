{
  "name": "collaborative-editor",
  "version": "1.0.0",
  "description": "A collaborative plaintext editor with WebSocket relay",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
